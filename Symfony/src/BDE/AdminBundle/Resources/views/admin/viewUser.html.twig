{% extends "BDEAdminBundle::layoutadmin.html.twig" %}

            {% block bodyadmin %}
                <div class="container-fluid">
                    <div class="row">

                        <div class="col-2">

                        </div>

                        <div class="col-8">
                            <div class="nameUtilisateur"><h3>{{ user.name }} {{ user.surname }}</h3></div>
                            <br><br>
                            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}


                            {{ form_errors(form) }}

                            <div class="form-group">
                                {{ form_label(form.name, "Nom") }}

                                {{ form_errors(form.name) }}


                                {{ form_widget(form.name) }}

                            </div>

                            <div class="form-group">
                                {{ form_label(form.surname, "Prenom") }}

                                {{ form_errors(form.surname) }}


                                {{ form_widget(form.surname) }}

                            </div>

                            <div class="form-group">
                                {{ form_label(form.email, "Email") }}

                                {{ form_errors(form.email) }}


                                {{ form_widget(form.email) }}

                            </div>

                            {{ form_row(form.role) }}
                            {{ form_row(form.save) }}


                            {{ form_end(form) }}
                            <a href="{{ path('bde_admin_index') }}" class="btnCart">
                                <i class="glyphicon glyphicon-chevron-left"></i>
                                Retour
                            </a>&nbsp;
                        </div>

                        <div class="col-2">

                        </div>

                    </div>

                </div>
            {% endblock %}