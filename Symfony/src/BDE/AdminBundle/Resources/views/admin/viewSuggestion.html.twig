{% extends "BDEAdminBundle::layoutadmin.html.twig" %}

            {% block bodyadmin %}
                <div class="container-fluid">
                    <div class="row">

                        <div class="col-12 col-xl-3">

                            <br><br>
                            <div class="tourniquet">
                                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <li data-target="#carouselExampleIndicators" data-slide-to="0"
                                            class="active"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                    </ol>
                                    <div class="carousel-inner">
                                        {% for images in events.events_picture[0:1] %}

                                            <div class="carousel-item active">
                                                <img class="d-block w-100" src="{{ asset('upload/'~images.picture) }}"
                                                     alt="First slide">
                                                <div class="carousel-caption d-none d-md-block">

                                                </div>
                                            </div>
                                        {% endfor %}

                                        {% for images in events.events_picture[1:] %}

                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="{{ asset('upload/'~images.picture) }}"
                                                     alt="Second slide">
                                                <div class="carousel-caption d-none d-md-block">

                                                </div>
                                            </div>
                                        {% endfor %}

                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                                       data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Précédent</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                                       data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Suivant</span>
                                    </a>
                                </div>
                            </div>

                        </div>

                        <div class="col-12 col-xl-7">
                            <div class="nameUtilisateur"><h3>{{ events.name }} </h3></div>
                            <br><br>


                            {% include "BDEEventBundle:Event:eventForm.html.twig" %}
                            <a href="{{ path('bde_admin_index') }}" class="btnCart">
                                <i class="glyphicon glyphicon-chevron-left"></i>
                                Retour
                            </a>&nbsp;
                        </div>
                        <div class="col-2">

                        </div>

                    </div>
                </div>


            {% endblock %}