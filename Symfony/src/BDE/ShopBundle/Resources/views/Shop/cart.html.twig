{% extends "BDEShopBundle::layoutShop.html.twig" %}

{% block title %}
    CART{{ parent() }}
{% endblock %}

{% block bodyshop %}

    <h1>
        <center>
            Votre panier
        </center>
        <br>
    </h1>

    <div class="container">
        <table id="cart" class="table table-hover table-condensed">
            <thead>
            <tr>
                <th style="width:50%">Produit</th>
                <th style="width:10%">Prix</th>
                {#<th style="width:8%">Quantité</th>
                <th style="width:22%" class="text-center">Sous-total</th>#}
                <th style="width:10%"></th>
            </tr>
            </thead>

            {% for article in articles %}
                <tbody>
                <tr>
                    <td data-th="Product">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs"><img src="{{ asset(article.picture) }}" alt="..."
                                                                 class="img-responsive"/></div>
                            <div class="col-sm-10">
                                <h4 class="nomargin"> {{ article.name }}</h4>
                                <p>{{ article.description }}</p>
                            </div>
                        </div>
                    </td>
                    <td data-th="Price">{{ article.price }} €</td>
                    {#<td data-th="Quantity">
                        <input type="number" class="form-control text-center" value="1">
                    </td>
                    <td data-th="Subtotal" class="text-center">25 €</td>#}
                    <td class="actions" data-th="">
                        <button class="btnCartSupp"><i class="fa fa-trash-o"></i></button>
                    </td>
                </tr>
                </tbody>
            {% endfor %}

            <tfoot>
            <tr class="visible-xs">
                <td class="text-center"><strong>Total 55 €</strong></td>
            </tr>
            <tr>
                <td><a href="{{ path('bde_shop_index') }}" class="btnCart"><i class="fa fa-angle-left"></i> Retour</a>
                </td>
                <td colspan="2" class="hidden-xs"></td>
                {#<td class="hidden-xs text-center"><strong>Total 55 €</strong></td>
                <form action="{{ path('bde_shop_command') }}" method="post" {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_rest(form) }}
                <td><a href="#" class="btnCartPay">Payer <i class="fa fa-angle-right"></i></a></td>
                </form>#}
                <td>
                        <form action="{{ path('bde_shop_command') }}" method="post" {{ form_start(form) }}

                        {{ form_errors(form) }}
                        {{ form_row(form.add) }}
                        {#<a href="" class="add-btn">Ajouter au panier</a>#}
                        </form>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
